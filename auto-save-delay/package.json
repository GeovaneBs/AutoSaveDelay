{
  "name": "auto-save-delay",
  "displayName": "Auto Save Delay",
  "description": "Automatically saves your work every 10 seconds of inactivity or immediately when you leave the file. This ensures your progress is never lost and keeps your work up to date effortlessly",
  "version": "0.0.1",
  "publisher": "GeovaneBrandao",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GeovaneBs/AutoSaveDelay"
  },
  "author": "Geovane Brand√£o geovaneb.gb@hotmail.com", 
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Auto Save Delay",
      "properties": {
        "autoSaveOnTabSwitch.delayInSeconds": {
          "type": "number",
          "default": 10,
          "description": "Delay in seconds before auto-saving the document after switching tabs."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  }
}
